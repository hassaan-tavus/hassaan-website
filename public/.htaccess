RewriteEngine On
RewriteBase /

# Handle /writing and /writing/* paths
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^writing/?.*$ /writing.html [L]

# Handle other clean URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !\.
RewriteRule ^([^/]+)/?$ /$1.html [L]
